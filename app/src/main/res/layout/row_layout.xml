<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ItemName:"
        android:id="@+id/textViewItemNameLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category:"
        android:id="@+id/textViewCategoryLabel"
        android:layout_below="@+id/textViewItemNameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:id="@+id/textViewPriceLabel"
        android:layout_below="@+id/textViewCategoryLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nexus 5X"
        android:id="@+id/textViewItemName"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewItemNameLabel"
        android:layout_toEndOf="@+id/textViewItemNameLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electronics"
        android:id="@+id/textViewItemCategory"
        android:layout_alignTop="@+id/textViewCategoryLabel"
        android:layout_alignLeft="@+id/textViewItemName"
        android:layout_alignStart="@+id/textViewItemName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24000"
        android:id="@+id/textViewItemPrice"
        android:layout_alignTop="@+id/textViewPriceLabel"
        android:layout_alignLeft="@+id/textViewItemCategory"
        android:layout_alignStart="@+id/textViewItemCategory" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/id"
        android:layout_below="@+id/textViewItemCategory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:visibility="invisible" />

</RelativeLayout>